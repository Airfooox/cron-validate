{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "lib": ["ESNext"],
    "target": "ESNext", // ES2017 is 100% supported in node.js 8.10.0.
    "module": "commonjs", // Node.js does not yet support es-modules.
    "moduleResolution": "node",

    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib/**/*", "src/**/*.test.ts"]
}
